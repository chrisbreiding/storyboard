{{#if banner}}
  <div {{bind-attr class="banner.type :banner"}}>
    {{banner.message}}
  </div>
{{/if}}

{{outlet}}

<a href="#" class="open-settings" {{action 'openSettings'}}>
  <i class="fa fa-cogs"></i>
</a>

{{#if settingsOpen}}
  {{render 'settings'}}
{{/if}}

<div class="toggle-fullscreen-surface">
  <a href="#" class="toggle-fullscreen" {{action 'toggleFullscreen'}}>
    {{#if fullscreen}}
      <i class="fa fa-compress"></i>
    {{else}}
      <i class="fa fa-expand"></i>
    {{/if}}
  </a>
</div>
