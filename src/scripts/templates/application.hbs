{{#if banner}}
  <div {{bind-attr class="banner.type :banner"}}>
    {{banner.message}}
  </div>
{{/if}}

{{outlet}}

<a href="#" class="toggle-fullscreen" {{action 'toggleFullscreen'}}>
  {{#if fullscreen}}
    <i class="fa fa-compress"></i>
  {{else}}
    <i class="fa fa-expand"></i>
  {{/if}}
</a>
