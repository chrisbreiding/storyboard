{{#if banner}}
  <div {{bind-attr class="banner.type :banner"}}>
    {{banner.message}}
  </div>
{{/if}}

{{outlet}}

<a href="#" class="open-settings" {{action 'openSettings'}}>
  <i class="fa fa-cogs"></i>
</a>

{{#if settingsOpen}}
  <form class="settings" {{action 'saveSettings' on="submit"}}>
    <fieldset>
      <label for="in-progress-max">Max. stories in progress before warning</label>
      {{input value=inProgressMax for="in-progress-max" type="number"}}
    </fieldset>

    <fieldset>
      <label for="base-font-size">Base font size (px)</label>
      {{input value=baseFontSize for="base-font-size" type="number"}}
    </fieldset>

    <button type="submit">Save</button>
  </form>
{{/if}}

<a href="#" class="toggle-fullscreen" {{action 'toggleFullscreen'}}>
  {{#if fullscreen}}
    <i class="fa fa-compress"></i>
  {{else}}
    <i class="fa fa-expand"></i>
  {{/if}}
</a>
